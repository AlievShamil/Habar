<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devcom.habar.LoginActivity">

    <Button
        android:id="@+id/login_title_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите номер телефона"
        android:textAllCaps="false"
        android:maxLines="1"
        android:textSize="18sp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habar отправить SMS-сообщение чтобы подтвердить Ваш номер телефона"
        android:textSize="16sp"
        android:layout_below="@+id/login_title_btn"
        android:layout_centerHorizontal="true"
        android:padding="25dp"
        android:textStyle="italic"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/login_phone_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv1"
        android:hint="Номер телефона"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мобильный оператор может взымать плату за SMS"
        android:textSize="16sp"
        android:layout_below="@+id/login_phone_input"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textStyle="italic"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/login_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/login_verification_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:hint="Введите код подтверждения"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/login_verification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:visibility="invisible"/>

</RelativeLayout>